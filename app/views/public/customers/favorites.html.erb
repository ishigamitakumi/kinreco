<div class= "favorite-post">

  <h2>いいね一覧</h2>

  <table class= "favorite-index">
  <% @favorite_posts.each do |post|%>
    <tr>
      <td><%= post.customer.name %>さんの投稿</td>
      <td><%=post.customer.age %></td>
      <td><%=post.customer.sex %></td>
      <td><%= post.muscle_menu.name %></td>
      <td><%= post.weight%>kgを<%= post.times %>回</td>
      <td>
        <%= link_to "詳細",muscle_post_path(post.id), class: "btn-circle-flat" %>
      </td>
    </tr>
  <% end %>
  </table>
    <div class="d-flex justify-content-center">
     <%= paginate @favorite_posts %>
    </div>
</div>
