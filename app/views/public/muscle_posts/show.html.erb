<div class="post-detail-page">
  <div class= "post-detail">
    <div class= "post-detail-item">
      <%= link_to customer_path(@muscle_post.customer.id) do %>
      <%= @muscle_post.customer.name %>
      <% end %>
      さんの投稿
    </div>
    <div class= "post-detail-item">
      <%= @muscle_post.muscle_menu.name %>
    </div>
    <div class= "post-detail-item">
      <%= @muscle_post.weight %>kgを<%= @muscle_post.times%>回
    </div>
    <div class= "post-detail-item"><textarea style=" width: 100%; height: 80%; box-sizing: border-box;"><%= @muscle_post.sentence%></textarea></div>

    <div class= "post-detail-item">
      <%= image_tag @muscle_post.get_post_image,size: "120x120" %>
    </div>
    <% if @muscle_post.customer == current_customer %>
      <div class= "post-detail-item">
        体重<%= @muscle_post.body_weight%>kg
      </div>
      <div class= "post-detail-item">
        <%= link_to "編集",edit_muscle_post_path, class: "btn-circle-flat2" %>
        <%= link_to "削除",muscle_post_path, method: :delete, class: "btn-circle-flat3" %>
      </div>
    <% else %>
    <div class= "post-detail-item">
      <%= render "public/favorites/favorite", muscle_post: @muscle_post %>
    </div>
    <% end %>
  </div>
</div>