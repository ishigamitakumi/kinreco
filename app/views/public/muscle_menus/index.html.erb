<div class= "result-page">
  <% if @muscle_menu.muscle_posts.exists? %>
    <h3>検索結果</h3>
      <% @muscle_posts.each do |muscle_post| %>
        <div class= "posts-index">
          <div class= "posts-item">
            <%= muscle_post.created_at.strftime("%m/%d") %>
          </div>
          <div class= "posts-item">
            <%= image_tag muscle_post.customer.get_profile_image, size: '60x60'%>
          </div>
          <div class= "posts-item">
          <%= link_to customer_path(muscle_post.customer_id) do %>
          <%= muscle_post.customer.name %>
          <% end %>
          </div>
          <div class= "posts-item">
            <%= muscle_post.customer.age %>
          </div>
          <div class= "posts-item">
            <%= muscle_post.customer.sex %>
          </div>
          <div class= "posts-item">
            <%= muscle_post.muscle_menu.name %>
          </div>
          <div class= "posts-item">
            <%= muscle_post.weight%>kgを<%= muscle_post.times %>回
          </div>
          <div class= "posts-item">
            <% unless @customer == current_customer %>
            <%= render "public/favorites/favorite", muscle_post: muscle_post %>
            <% end %>
          </div>
          <div class= "posts--item">
          <%= link_to "詳細",muscle_post_path(muscle_post.id), class: "btn-circle-flat1" %>
          </div>
        </div>
    <% end %>
  <% else %>
  <h3 class= "not-exist">ヒットしませんでした</h3>
<% end %>
  <div class="d-flex justify-content-center">
    <%= paginate @muscle_posts %>
  </div>
</div>




