<div class= "follow-page">
  <h3>フォロー</h3>
  <% if @customers.exists? %>
    <% @customers.each do |customer| %>
    <div class= "follow-index">
      <div class= "follow-item">
        <%= image_tag customer.get_profile_image, size: '60x60'%>
      </div>
      <div class= "follow-item">
        <%= link_to customer_path(customer.id) do %>
        <%= customer.name %>
        <% end %>
      </div>
      <div class= "follow-item">
        フォロー数：<%= link_to "#{customer.followings.count} ",customer_followings_path(customer.id)  %>
        フォロワー数：<%= link_to "#{customer.followers.count} ", customer_followers_path(customer.id)  %>
      </div>
    </div>
    <% end %>
  <% else %>
    <p>ユーザーはいません</p>
  <% end %>
    <div class="d-flex justify-content-center">
      <%= paginate @customers %>
    </div>
</div>