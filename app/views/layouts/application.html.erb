<!DOCTYPE html>
<html>
  <head>
    <title>Kinreco</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav>
        <div>
          <ul>
            <% if admin_signed_in? %>
              <li>
                <%= link_to "筋トレメニュ一覧", admin_muscle_menus_path %>
              </li>
              <li>
                <%= link_to "会員一覧", admin_customers_path %>
              </li>
              <li>
                <%= link_to "ログアウト", destroy_admin_session_path, method: :delete %>
              </li>
              <% else %>
            <ul>
              <% if customer_signed_in? %>
              <li>
                <%= link_to "マイページ", customer_path(current_customer) %>
              </li>
              <li>
                <%= link_to "カレンダー", customers_calendar_path %>
              </li>
              <li>
                <%= link_to "投稿",new_muscle_post_path  %>
              </li>
              <li>
                <%= link_to "他の人の投稿を見る",muscle_posts_path %>
              </li>
              <li>
                <%= link_to 'ログアウト', destroy_customer_session_path, method: :delete %>
              </li>
              <% else %>
              <li>
                <%= link_to "about",homes_about_path %>
              </li>
              <li>
                <%= link_to "新規登録",new_customer_registration_path %>
              </li>
              <li>
                <%= link_to "ログイン",new_customer_session_path %>
              </li>
              <% end %>
            </ul>
            <% end %>
            </ul>
        </div>
      </nav>
    </header>
      <%= yield %>
  </body>
</html>
